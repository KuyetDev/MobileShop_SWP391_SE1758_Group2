@page
@model MobileShop.Management.Hosted.Pages.LoginModel
@{
    ViewData["Title"] = "Login page";
}
<div class="login-wrap">
    <p style="color:Tomato;">@Model.Message</p>
    <div class="login-html">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Login</label>
        <input id="tab-1" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
        <div class="login-form">

            <form asp-page-handler="Signin" method="post">
                <div class="sign-in-htm">
                    <div class="group">
                        <label for="user" class="label">Email</label>
                        <input id="user" type="text" class="input" name="mail">
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Password</label>
                        <input id="pass" type="password" class="input" data-type="password" name="password">
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="SignIn">
                    </div>
                    <div class="hr"></div>
                    <div class="foot-lnk">
                        <a asp-page="/MailForgotPassword">Forgot Password?</a>
                    </div>
                </div>
            </form>


        </div>
    </div>
</div>